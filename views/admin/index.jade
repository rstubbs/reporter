extends ../../layouts/admin

block head
  title Admin Area

block neck
  link(rel='stylesheet', href='/views/admin/index.min.css?#{cacheBreaker}')

block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Admin Area
      div.row
        div.col-sm-4
        div.col-sm-4
          a(href='/admin/mediafiles/')
            div.well.stat
              div.stat-value #{countMediafile}
              div.stat-label Mediafiles
        div.col-sm-4      
        div.col-sm-4
          a(href='/admin/users/')
            div.well.stat
             div.stat-value #{countUser}
             div.stat-label Users

    div.col-sm-6.special
      div.page-header
        h1 Super Dashboard
      i.fa.fa-gears.super-awesome

extends ../../../layouts/admin

block head
	title Mediafiles / Actions

block feet
	script(src='/views/admin/mediafiles/actions.min.js?#{cacheBreaker}')
	script(src='/vendor/bootstrap/js/transition.js')


block body
	div.row
		div.col-xs-12
			div#header

	script(type='text/template', id='tmpl-header')
		div.page-header
			h1
				a(href='/admin/mediafiles/') Mediafiles 
				a(href!='/admin/mediafiles/<%- _id %>') /  <%- name %> - edit
		div#actions
				<% actionLog.reverse() %>
				|<% _.each(actionLog, function(lifecycle, i) {  %>

				.panel.panel-default
				
					.panel-heading
						h4.panel-title 
						table(cellpadding="10" ) 
							tr
								th(style='width: '+(15)+'%')   Name
								th(style='width: '+(5)+'%')
								th(style='width: '+(30)+'%')   Lifecycle
								th(style='width: '+(5)+'%')
								th(style='width: '+(30)+'%')   Action
								th(style='width: '+(5)+'%')
								th(style='width: '+(10)+'%')   Time Stamp
							tr
								td <%- actionLog[i].name      %>	
								td						
								td <%- actionLog[i].lifecycle %>
								td
								td <%- actionLog[i].action    %>
								td
								td <%- actionLog[i].timestamp %>
							
				|<% }); %>

				|<% if (actionLog.length === 0 || actionLog === 'undefined') { %>
				p No actions yet 
				|<% } %>	





	script(type='text/template', id='data-record') !{data.record}
	script(type='text/template', id='data-lifecycles') !{data.lifecycles}